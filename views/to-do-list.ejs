<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&family=Poiret+One&family=Poppins&family=Ubuntu:wght@700&display=swap" rel="stylesheet">
  <!-- Bootstrap core CSS -->
  <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet"> -->
  <!-- Material Design Bootstrap -->
  <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet"> -->

  <!-- Optional CSS  -->
  <link rel="stylesheet" href="css/clock.css">
  <link rel="stylesheet" href="css/styles.css">

  <title>To-do-List</title>
  
</head>
<body>

  <main>

    <div class="box" id="heading">
      <!-- The Title -->
      <h1><%= listTitle %></h1>

    </div>

    <div class="box">
    <!-- The list -->
      <% newItems.forEach((list)=>{ %>
        <%  if (list.name.length > 0){ %>
          <form action="/delete" method="POST">
            <div class="item">
              <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%=list._id %>">
              <p> <%= list.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%= listTitle %>"></input>
          </form>
          
        <% } %>  
      <% }) %>

    <!-- Add a new item -->
    <form action="/" method="post" class="item">
      <label for="add-item" class="sr-only">Add new item</label>
      <input type="text" name="addItem" id="#add-item" class="form-control" placeholder="Add new item" autocomplete="off">
      <button type="submit" class="btn btn-lg btn-light" name="button" value="<%= listTitle %>"> + </button>
    </form>

    </div>
  </main>
  
  <section>
    <div class="box" id="heading">
      <!-- The Title -->
      <h3>Create a custom list</h3>
    </div>

    <div class="box">
      <form action="/customList" method="POST">
        <input type="text" name="newlistTitle" id="customList" class="form-control" placeholder="Title"> 
        <button type="submit" class="btn btn-lg btn-light" name="newList"> + </button> 
      </form>
    </div>

  </section>
</body>

</html>
